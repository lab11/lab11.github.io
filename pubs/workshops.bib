  author = {Despres, Tess and Patil, Shishir and Tan, Alvin and Watson, Jean-Luc and Dutta, Prabal},
  title = {Where the Sidewalk Ends: Privacy of Opportunistic Backhaul},
  year = {2022},
  month = {April},
