@INPROCEEDINGS{lee12modular,
	author={Lee, Yoonmyung and Kim, Gyouho and Bang, Suyoung and Kim, Yejoong and Lee, Inhee and Dutta, Prabal and Sylvester, Dennis and Blaauw, David},
